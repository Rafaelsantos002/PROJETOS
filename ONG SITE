<!-- ========================= cadastro.html ========================= -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ONG+ | Cadastro de Voluntário</title>
  <link rel="stylesheet" href="assets/styles.css">
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const mask = (input, pattern) => {
        input.addEventListener('input', e => {
          let value = e.target.value.replace(/\D/g, '');
          let newValue = '';
          let j = 0;
          for (let i = 0; i < pattern.length && j < value.length; i++) {
            newValue += pattern[i] === '0' ? value[j++] : pattern[i];
          }
          e.target.value = newValue;
        });
      };
      mask(document.querySelector('#cpf'), '000.000.000-00');
      mask(document.querySelector('#telefone'), '(00) 00000-0000');
      mask(document.querySelector('#cep'), '00000-000');
    });
  </script>
</head>
<body>
  <header>
    <nav class="container">
      <h1>ONG+</h1>
      <ul>
        <li><a href="index.html">Início</a></li>
        <li><a href="projetos.html">Projetos</a></li>
        <li><a href="cadastro.html" aria-current="page">Cadastro</a></li>
      </ul>
    </nav>
  </header>

  <main class="container">
    <section>
      <h2>Cadastro de Voluntário</h2>
      <form>
        <fieldset>
          <legend>Dados Pessoais</legend>
          <label>Nome Completo: <input type="text" name="nome" required></label>
          <label>E-mail: <input type="email" name="email" required></label>
          <label>CPF: <input type="text" id="cpf" name="cpf" required maxlength="14"></label>
          <label>Telefone: <input type="text" id="telefone" name="telefone" required maxlength="15"></label>
          <label>Data de Nascimento: <input type="date" name="nascimento" required></label>
        </fieldset>

        <fieldset>
          <legend>Endereço</legend>
          <label>Endereço: <input type="text" name="endereco" required></label>
          <label>CEP: <input type="text" id="cep" name="cep" required maxlength="9"></label>
          <label>Cidade: <input type="text" name="cidade" required></label>
          <label>Estado: <input type="text" name="estado" maxlength="2" required></label>
        </fieldset>

        <button type="submit" class="btn">Enviar Cadastro</button>
      </form>
    </section>
  </main>

  <footer>
    <p>&copy; 2025 ONG+ — Cadastro de Voluntários</p>
  </footer>
</body>
</html>

